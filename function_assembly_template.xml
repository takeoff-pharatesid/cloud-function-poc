<assembly
        xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
    <id>FUNCTION_NAME</id>
    <formats>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <fileSets>
        <fileSet>
            <directory>${project.basedir}</directory>
            <includes>
                <include>go.mod</include>
                <include>go.sum</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/vendor</directory>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/common</directory>
            <includes>
                <include>**/**.go</include>
            </includes>
            <excludes>
                <exclude>**/*_test.go</exclude>
            </excludes>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/cloud-functions/FUNCTION_NAME</directory>
            <outputDirectory>/</outputDirectory>
            <includes>
                <include>**/**.go</include>
            </includes>
            <excludes>
                <exclude>**/**_test.go</exclude>
                <exclude>**/cmd/**</exclude>
            </excludes>
        </fileSet>
    </fileSets>
</assembly>